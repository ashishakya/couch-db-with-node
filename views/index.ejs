<h3>Add Customers</h3>
<form method="post" action="/customers">
    <input type="text" name="name" placeholder="Enter Customer Name"/>
    <input type="email" name="email" placeholder="Enter Email"/>
    <input type="submit" value="Submit"/>
</form>
<hr>
<h3>Customers</h3>
<ul>
    <% customers.forEach(function (customer){ %>
        <li>
            <div style="display: flex; align-items: center">
                <h4 style="margin-right: 2px"><%= customer.value.name %></h4> (<%= customer.value.email %>)
            </div>

            <div style="display: flex;">
                <a href="/customers/<%= customer.key %>/edit">
                    <button>Edit</button>
                </a>
                &nbsp;
                <form method="post" action="/customers/delete/<%= customer.key %>">
                    <input type="hidden" value="<%= customer.value.rev %>" name="rev">
                    <input type="submit" value="Delete">
                </form>
            </div>
        </li>
    <% }); %>
</ul>
